<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Home"
    android:id="@+id/home_fragment"
    android:background="@color/backgroundWhite">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_foreground"
        />

    <Button
        android:id="@+id/bstButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Binary Search Tree"
        android:textAllCaps="false"
        android:textColor="@color/textHomepageButtons"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/rbtButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Red Black Tree"
        android:textAllCaps="false"
        android:textColor="@color/textHomepageButtons"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/avlButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Balanced Search Tree"
        android:textAllCaps="false"
        android:textColor="@color/textHomepageButtons"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/filesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Files / Load Structure"
        android:textAllCaps="false"
        android:textColor="@color/textHomepageButtons"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />




</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>