<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBlue"
    android:orientation="vertical"
    android:id="@+id/visualizer_fragment"
    tools:context=".ui.Visualizer">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/input_nodes"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:ems="10"
            android:gravity="center"
            android:hint="0 - 100"
            android:inputType="number"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/button_insert"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/visulizer_button"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_add" />

        <ImageButton
            android:id="@+id/button_undo"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/visulizer_button"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_revert" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/button_traversal"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:background="@drawable/visulizer_button"
            android:text="Tree Traversal"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textAllCaps="false"
            android:textSize="20sp" />


        <Button
            android:id="@+id/button_autopopulate"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:background="@drawable/visulizer_button"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="Auto-Populate"
            android:textAllCaps="false"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageButton
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous"
            android:layout_marginLeft="7dp"
            />


        <ImageButton
            android:id="@+id/button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/button_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_pause" />

        <ImageButton
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_next" />


    </LinearLayout>

    <com.example.datastructurevisualizer.VisualizerCanvas
        android:id="@+id/view_visualizer"
        android:layout_width="349dp"
        android:layout_height="473dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:contentDescription=""
        android:layout_gravity="center"
        android:layout_margin="5dp">

    </com.example.datastructurevisualizer.VisualizerCanvas>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/visulizer_button"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Save"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/visulizer_button"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Load"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


